---
apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: {{ env_classification }}.{{ company_domain }}-http
  annotations:
    kubernetes.io/ingress.class: nginx
spec:
  rules:
    - host: {{ env_classification }}.{{ company_domain }}
      http:
        paths:
          - backend:
              serviceName: hello-world
              servicePort: 80
            path: /
